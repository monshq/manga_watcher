<header>
  Manga <%= @manga.id %>
</header>

<.back navigate={~p"/mangas"}>Back to mangas</.back>

<.modal
  :if={@live_action == :edit}
  id="manga-modal"
  show
  on_cancel={JS.patch(~p"/mangas/#{@manga}")}
>
  <.live_component
    module={MangaWatcherWeb.MangaLive.FormComponent}
    id={@manga.id}
    title={@page_title}
    action={@live_action}
    manga={@manga}
    patch={~p"/mangas/#{@manga}"}
  />
</.modal>
